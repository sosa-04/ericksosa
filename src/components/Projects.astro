---
import { projects } from "../content/data/db";
---

<section id="projects" class="py-16 px-4 sm:px-6 lg:px-8 bg-white mt-28 mb-10 ">

    <!-- Título -->
    <div class="text-center mb-12">
        <h2 class="text-3xl md:text-4xl font-bold text-gray-900">
            Mis Proyectos
        </h2>
    </div>

    <!-- Grid de tarjetas -->
    <div class="grid grid-cols-1 md:grid-cols-2 lg:grid-cols-3 gap-6 lg:gap-8">
        {projects.map((project) => (
            <div class="max-w-sm w-full transition transform hover:shadow-lg hover:-translate-y-1 
                        transition-all hover:border-blue-400 bg-white rounded-2xl shadow-md border 
                        border-gray-200 overflow-hidden duration-200 mx-auto">
                <a href="/azureProject">
                    <img src={project.image} alt="imgExample" class="w-full h-48 object-cover" />
                    <div class="p-6">
                        <h3 class="text-2xl font-semibold text-gray-800 mb-2">{project.title}</h3>
                        <p class="text-gray-600 mb-4">{project.description}</p>

                        <div class="mb-4">
                            <h4 class="text-sm text-gray-700 font-medium mb-1">Tecnologías:</h4>
                            <ul class="flex flex-wrap gap-2">
                                {project.tech.map((item) => (
                                    <li class="bg-gray-100 text-gray-800 text-sm font-medium px-2.5 py-0.5 rounded">
                                        {item}
                                    </li>
                                ))}
                            </ul>
                        </div>

                        <div class="flex  justify-end space-x-4">
                            <a href={project.github}  target="_blank" rel="noopener noreferrer" 
                                class="text-gray-600 hover:text-blue-500 transition-colors 
                                duration-200 mr-4" title="GitHub">
                                <svg class="w-8 h-8" fill="currentColor" viewBox="0 0 24 24">
                                    <path d="M12 2C6.477 2 2 6.484 2 12.017c0 4.425 2.865 8.18 6.839 9.504.5.092.682-.217.682-.483 0-.237-.008-.868-.013-1.703-2.782.605-3.369-1.343-3.369-1.343-.454-1.158-1.11-1.466-1.11-1.466-.908-.62.069-.608.069-.608 1.003.07 1.531 1.032 1.531 1.032.892 1.53 2.341 1.088 2.91.832.092-.647.35-1.088.636-1.338-2.22-.253-4.555-1.113-4.555-4.951 0-1.093.39-1.988 1.029-2.688-.103-.253-.446-1.272.098-2.65 0 0 .84-.27 2.75 1.026A9.564 9.564 0 0112 6.844c.85.004 1.705.115 2.504.337 1.909-1.296 2.747-1.027 2.747-1.027.546 1.379.202 2.398.1 2.651.64.7 1.028 1.595 1.028 2.688 0 3.848-2.339 4.695-4.566 4.943.359.309.678.92.678 1.855 0 1.338-.012 2.419-.012 2.747 0 .268.18.58.688.482A10.019 10.019 0 0022 12.017C22 6.484 17.522 2 12 2z"/>
                                </svg>
                            </a>
                        </div>
                    </div>
                </a>
            </div>    
        ))}

    </div>
        
</section>